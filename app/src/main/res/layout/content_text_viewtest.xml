<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_text_viewtest"
    tools:context="com.yixiaoqi.administrator.te2_3kongjiantest.textViewtest">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="欢迎登陆"
        android:textColor="@color/deepskyblue"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:id="@+id/t1"
        android:shadowColor="@color/pink"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:textSize="16dp"
        android:text="用户名:"
        android:layout_x="20dp"
        android:layout_y="100dp"
        android:textColor="@color/mediumpurple"
        />
    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/t2"
        android:layout_x="80dp"
        android:layout_y="87dp"
        android:id="@+id/name"
        android:inputType="textEmailAddress"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:textSize="16dp"
        android:text="密   码:"
        android:layout_x="20dp"
        android:layout_y="170dp"
        android:textColor="@color/mediumpurple"
        />
    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/t2"
        android:layout_x="80dp"
        android:layout_y="157dp"
        android:password="true"
        android:id="@+id/pass"
        />
    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/landed"
        android:text="登陆"
        android:gravity="center"
        android:textColor="@color/darkviolet"
        android:layout_x="45dp"
        android:layout_y="280dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textSize="16dp"
        android:textColor="@color/mediumpurple"
        android:layout_x="45dp"
        android:id="@+id/cb1"
        android:layout_y="240dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐身登陆"
        android:textSize="16dp"
        android:textColor="@color/mediumpurple"
        android:layout_x="155dp"
        android:layout_y="240dp"
        android:id="@+id/cb2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系我们：1361579914@qq.com\n或13797810525"
        android:autoLink="email|phone"
        android:textColorLink="@color/mediumvioletred"
        android:layout_x="55dp"
        android:layout_y="350dp"
        />

</AbsoluteLayout>
